<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.protopo.previewplace.tabla_datos_agri">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:text="\nIngrese angulos iniciales internos:\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView45"
                    android:textColor="@color/AliceBlue" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <EditText
                        android:nextFocusDown="@+id/editText12_g"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/editText11_dis"
                        tools:text="106" />

                    <EditText
                        android:nextFocusDown="@+id/editText13_m"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/editText12_g"
                        tools:text="88" />

                    <EditText
                        android:nextFocusDown="@+id/editText14_s"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/editText13_m"
                        tools:text="12" />

                    <EditText
                        android:nextFocusDown="@+id/btn_add"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/editText14_s"
                        android:text="0" />

                    <Button
                        android:nextFocusDown="@+id/editText11_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Agregar"
                        android:id="@+id/btn_add"
                        android:onClick="btn_add" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" R              "
                            android:id="@+id/textView40" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Grados"
                            android:id="@+id/textView41" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Minutos"
                            android:id="@+id/textView42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Segundos"
                            android:id="@+id/textView43" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView8" >

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="225dp"
                        android:id="@+id/horizontalScrollView5"
                        android:layout_weight="0.05">

                        <TableLayout
                            android:id="@+id/tablta"
                            android:layout_span="4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:onClick="btn_add" />
                    </HorizontalScrollView>
                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView44"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo1"
                    android:textColor="@color/AliceBlue"
                    android:textSize="18sp"
                    android:text=""/>



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView10" >

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="225dp"
                        android:id="@+id/horizontalScrollView9"
                        android:layout_weight="0.05" >

                        <TableLayout
                            android:id="@+id/tableLayouttt"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:onClick="btn_add"
                            android:gravity="fill_vertical|fill_horizontal|fill" />
                    </HorizontalScrollView>
                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo2"
                    android:textColor="@color/AliceBlue"
                    android:textSize="18sp"
                    android:text="" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView11" >

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="225dp"
                        android:id="@+id/horizontalScrollView10"
                        android:layout_weight="0.05" >

                        <TableLayout
                            android:id="@+id/tableLayouttt1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:onClick="btn_add" />
                    </HorizontalScrollView>
                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/provi"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
